{
  "configurations": {
    "cpp-debug": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/kew",
        "cwd": "${workspaceRoot}/",
        "externalConsole": true,
        "stopAtEntry": true,
        "MIMode": "gdb",
        "visualizeAdapters": true,
        "showDisassembly": "never",
        "exceptionBreakpoints": [],
        "logging": {
          "engineLogging": false
        },
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "exceptionBreakpoints": {
          "cpp_throw": false,
          "cpp_catch": false
        }
      }
    }
  }
}
